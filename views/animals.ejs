<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="scripts/showAnimals.js"></script>
</head>
<body>
<%- include ('./partials/header.ejs') %>
<style> 
    .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }
    .card {
        width: 18rem;
        margin: 1rem;
    }
    .card-img-top {
        height: 200px;
        object-fit: cover;
    }
    .card-title {
        font-size: 1.5rem;
    }
    .animal-species {
        font-size: 1.25rem;
    }
</style>
<div class="container">
<div id="base-card" class="card col-lg-4 d-none mx-auto mb-3">
    <img src="..." class="card-img-top" alt="Fluffy">
    <div class="card-body">
        <h5 class="card-title"></h5>
        <p class="card-text animal-species"></p>
        <p class="card-text animal-description"></p>
    </div>
    <div class="like-button" onclick="toggleHeart(this)">
        <img src="images/heart.png" alt="Like" width="47px" height="33px">
    </div>
</div>
</div>
<script>
    function toggleHeart(element) {
        const img = element.querySelector('img');
        if (img.src.endsWith('heart.png')) {
            img.src = 'images/heart2.png';
            img.width = 47;
            img.height = 33;
            //<img src="images/heart2.png" alt="Like" width="47px" height="33px">
        } else {
            img.src = 'images/heart.png'; 
            img.width = 47;
            img.height = 33;
        }
    }
</script>
<script src="/scripts/favorites.js"></script>


<%- include ('./partials/footer.ejs') %>

</body>

</html>